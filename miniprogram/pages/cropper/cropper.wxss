/* pages/selectAvatar/selectAcatar.wxss */

.container {
	width: 100%;
	height: 100vh;
	display: flex;
	flex-direction: column;
	/* background-color: red; */
	justify-content: center;
	align-items: center;
}

.canvas {
	position: absolute;
	top: -1000rpx;
}

.item {
	display: flex;
	justify-content: center;
	align-items: center;
	background-color: transparent;
}

.item image {
	width: 300rpx;
	height: 300rpx;
	border-radius: 50%;
}

.select-img {
	font-size: 30rpx;
	line-height: 30rpx;
	font-weight: 400;
	margin: 30rpx 0rpx;
}

.save-avatar {
	font-size: 30rpx;
	font-weight: 400;
	line-height: 30rpx;
}

.cropper-wrapper {
	width: 100vw;
	height: 100vh;
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	background: blue;
}

.openSetting {
	position: absolute;
	z-index: 222;
	opacity: 0;
}

.top {
	position: absolute;
	width: 100%;
	top: 10rpx;
	display: flex;
	flex-flow: wrap;
	z-index: 10;
	color: white;
	justify-content: space-around;
}

.hint {
	position: absolute;
	top: 10rpx;
	width: 100%;
	font-size: 33rpx;
	text-align: center;
	color: white;
	z-index: 10;
}

page {
	background: white;
}

view {
	font-size: 30rpx;
}

.bottom {
	position: absolute;
	width: 100%;
	bottom: 100rpx;
	display: flex;
	z-index: 10;
	justify-content: center;
	align-items: center;
	flex-wrap: wrap;
	height: 240rpx;
}
.one,.two,.three {
	display: flex;
	flex-wrap: wrap;
	align-items: center;
	margin-bottom: 10rpx;
}
.one switch {
	margin: 10rpx 5rpx 0rpx 0rpx;
}
.button {
	font-size: 27rpx;
	z-index: 2;
	padding: 10rpx 20rpx;
	margin: 0 4rpx;
	background-color: #fff;
    border-radius: 100rpx;
    width: 100rpx;
}

.input {
	display: flex;
	height: 50rpx;
	width: 50%;
}

.input>.label {
	min-width: 150rpx;
	font-size: 30rpx;
	height: 50rpx;
	line-height: 50rpx;
}

.input>input {
	margin-left: 10rpx;
	text-align: center;
	max-width: 160rpx;
	border: 1px solid rgb(255, 255, 255);
	height: 50rpx;
	line-height: 50rpx;
	min-height: 50rpx;
	box-sizing: border-box;
}