/* pages/selectAvatar/selectAcatar.wxss */
.container {
	width: 100%;
	height: 80vh;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}
.canvas {
	position: absolute;
	top: -1500px;
	width: 1000px;
	height: 1000px;

}
.item {
	display: flex;
	justify-content: center;
	align-items: center;
	background-color: transparent;
}
.item image {
	width: 500rpx;
	height: 500rpx;
}
.select-img {
	font-size: 30rpx;
	font-weight: 400;
	margin: 30rpx 0rpx;
}
.avatar {
	font-size: 30rpx;
	font-weight: 400;
}
.cropperbg {
	position: fixed;
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
	right: 0;
	background: #000;
}

.cropper {
	background: #000;
}
.cropper-buttons {
	width: 100%;
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.confirm,.reset {
	width: 180rpx;
	height: 80rpx;
	background: #16BA98;
	border-radius: 45rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	color: #fff;
	margin: 0 auto;
}
.btn {
	
}
.openSetting {
	position: absolute;
	z-index: 222;
	opacity: 0;
}
.upload {
	position: absolute;
	bottom: 10rpx;
	left: 200rpx;
	opacity: 0;
}